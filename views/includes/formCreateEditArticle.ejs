<div class="form-group mt-3">
  <label for="title">Title</label>
  <input
    id="title"
    value="<%= article.title %>"
    name="title"
    type="text"
    class="form-control"
    required
  />
</div>
<div class="form-group mt-3">
  <label for="description">Short Description</label>
  <textarea id="description" name="description" class="form-control" required>
<%= article.description %></textarea
  >
</div>
<div class="form-group mt-3">
  <label for="content">Content</label>
  <textarea id="content" name="content" class="form-control" required>
<%= article.content %></textarea
  >
</div>

<div class="button-control mt-3">
  <button type="submit" class="btn coloredButton projectBlue">Save</button>
  <a href="/articles" class="btn coloredButton projectGrey">Back</a>
</div>
